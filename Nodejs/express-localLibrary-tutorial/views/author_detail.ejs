<% layout("layout") %>
<h1>Author: <%= author.getFullName %> </h1>
<p> <%= author.lifespan %> </p>
<div style="margin-left: 20px; margin-top: 20px;">
  <h4>Books</h4>
  <dl>
    <% if(Object.keys(allBooksByAuthor).length == 0){ %>
      <p>This author has no book </p>
    <% } else{ %>
    <% for (book in allBooksByAuthor){ %>
        <dt> <a href="<%= allBooksByAuthor[book].getBookUrl %>"> <%= allBooksByAuthor[book].title %> </a>  </dt>
        <dd> <%= allBooksByAuthor[book].summary %> </dd>
    <% } } %>
  </dl>
</div>
<hr>
<p>
  <a href="<%= author.getAuthorUrl %>/delete">Delete Author</a>
</p>
<p>
  <a href="<%= author.getAuthorUrl %>/update">Update Author</a>
</p>
