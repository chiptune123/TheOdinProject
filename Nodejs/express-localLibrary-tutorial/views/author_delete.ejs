<% layout("layout") %>
<h1>Author: <%= author.getFullName %></h1>
<p><%= author.lifespan %></p>
  <% if(author_books.length > 0){ %>
    <p>
      <strong>
        Delete the following books before attempting to delete this author.
      </strong>
    </p>

    <div style="margin-left: 20px;margin-top: 20px;">
      <h4>Books</h4>
      <dl>
        <% for(let book in author_books){ %>
            <dt>
              <a href="<%= author_books[book].getBookUrl %>"><%= author_books[book].title %></a>
            </dt>
            <dd><%= author_books[book].summary %></dd>
        <% } %>
      </dl>
    </div>
<% } else { %> 
    <p>Do you really want to delete this Author?</p>
    <form method="post" action="">
      <div class="form-group">
        <input 
          class="form-control" 
          id="authorid" 
          type="hidden" 
          name="authorid"
          require="true" 
          value="<%= author._id %>"
        >
      </div>
      <button class="btn btn-primary" type="submit">Delete</button>
    </form>
<% } %> 